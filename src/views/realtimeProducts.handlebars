<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 20px auto;">
  <h1 style="text-align: center;">Productos en tiempo real</h1>

  <ul id="list" style="list-style: none; padding: 0;">
    {{#each products}}
      <li data-id="{{id}}" style="margin: 6px 0; border-bottom: 1px solid #ddd; padding-bottom: 4px;">
        <strong>#{{id}}</strong> — {{title}} (${{price}})
        <button class="btn-delete"
          data-id="{{id}}"
          style="margin-left: 6px; background: #e74c3c; color: #fff; border: none; border-radius: 4px; padding: 2px 6px; cursor: pointer;">
          Eliminar
        </button>
      </li>
    {{/each}}
  </ul>

  <h3>Agregar producto</h3>
  <form id="form-create" style="display: flex; flex-direction: column; gap: 6px; max-width: 300px;">
    <input name="title" placeholder="Título" required style="padding: 10px;" />
    <input name="price" type="number" placeholder="Precio" required style="padding: 10px;" />
    <button style="background: #2ecc71; color: white; border: none; padding: 12px; border-radius: 4px; cursor: pointer;">
      Crear
    </button>
  </form>

  <a href="/" style="display: inline-block; margin-top: 16px; padding: 6px 12px;
     background-color: #555; color: #fff; border-radius: 6px; text-decoration: none;">
    ⬅️ Volver al inicio
  </a>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>